<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feed_background">

    <!-- 상단 바 (AppBar) -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fitsSystemWindows="true">


        <!-- 중앙 이미지 -->
        <ImageView
            android:id="@+id/topBarImage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/meltingbooks_toplog"
            />

        <!-- 우측 아이콘 버튼 -->
        <ImageButton
            android:id="@+id/goTo_Profile_setting"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="10dp"
            android:layout_marginStart="340dp"
            android:background="@null"
            android:contentDescription="Setting Profile Button"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_setting"/>
    </RelativeLayout>

    <!-- 스크롤 가능한 내용 영역 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            >
            <!--프로필 영역-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/round_background_15"
                android:backgroundTint="#BFFFFFFF"
                app:layout_constraintTop_toBottomOf="@id/topBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <!-- 프로필 백그라운드 이미지 -->
                <ImageView
                    android:id="@+id/profile_background_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/profile_background"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <!-- 반투명 흰색 원 (프로필 뷰보다 조금 큼) -->
                <View
                    android:id="@+id/profile_ring"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/circle_white_translucent"
                    app:layout_constraintTop_toBottomOf="@id/profile_background_area"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:translationY="-65dp"
                    />

                <!-- 실제 프로필 이미지 (원형) -->
                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_profile"
                    android:background="@drawable/profile_image_background"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_ring"
                    app:layout_constraintStart_toStartOf="@+id/profile_ring"
                    app:layout_constraintEnd_toEndOf="@+id/profile_ring"
                    app:layout_constraintTop_toTopOf="@+id/profile_ring"
                    android:clipToOutline="true"
                    android:translationY="-65dp"
                    />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 이름"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="@+id/profile_area"
                    app:layout_constraintStart_toStartOf="@+id/profile_area"
                    app:layout_constraintTop_toBottomOf="@+id/profile_ring"
                    android:layout_marginTop="-40dp"
                    />

                <TextView
                    android:id="@+id/profile_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lv.1"
                    android:textSize="20sp"
                    android:textColor="#9C9C9C"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_name"
                    app:layout_constraintStart_toEndOf="@+id/profile_name"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/profile_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 소개"
                    android:textSize="20sp"
                    android:textColor="#434343"
                    app:layout_constraintStart_toStartOf="@+id/profile_area"
                    app:layout_constraintEnd_toEndOf="@+id/profile_area"
                    app:layout_constraintTop_toBottomOf="@+id/profile_name"
                    android:layout_marginTop="0dp"
                    />

                <LinearLayout
                    android:id="@+id/follow_number_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/profile_bio"
                    app:layout_constraintStart_toStartOf="@+id/profile_area"
                    app:layout_constraintEnd_toEndOf="@+id/profile_area"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:layout_marginHorizontal="50dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/round_background_15"
                    android:backgroundTint="#BFFFFFFF"
                    android:layout_marginTop="8dp"
                    >

                    <!--포스트 수-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21"
                            android:textColor="@color/black"
                            android:textSize="32sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="posts"
                            android:textColor="#A6424242"
                            />
                    </LinearLayout>

                    <!--팔로워 수-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="48"
                            android:textColor="@color/black"
                            android:textSize="32sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="followers"
                            android:textColor="#A6424242"
                            />
                    </LinearLayout>

                    <!--팔로잉 수-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21"
                            android:textColor="@color/black"
                            android:textSize="32sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="following"
                            android:textColor="#A6424242"
                            />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--최근 읽은 책-->
            <LinearLayout
                android:id="@+id/recently_read_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_background_15"
                android:backgroundTint="#BFFFFFFF"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_area">

                <TextView
                    android:id="@+id/recently_read_book_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="최근 읽은 책"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <!-- 책 선택 영역 -->
                <LinearLayout
                    android:id="@+id/book_image_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toTopOf="@id/recently_read_book_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:clipChildren="false">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:clipChildren="false"
                        >

                        <LinearLayout
                            android:id="@+id/book_list_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:clipChildren="false"
                            />
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>

            <!--최근 작성한 글-->
            <LinearLayout
                android:id="@+id/recent_reviews"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_background_15"
                android:backgroundTint="#BFFFFFFF"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/recently_read_book"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <TextView
                    android:id="@+id/recently_reviews_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최근 작성한 글"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <!-- 피드 RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/feedRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recently_reviews_text"
                    app:layout_constraintVertical_bias="0.0" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <!-- 하단 메뉴바-->
    <RelativeLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="11dp"
        android:layout_marginHorizontal="5dp"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_background_20"/>

        <!-- Gradient Circle Background -->
        <ImageView
            android:id="@+id/gradientCircle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/gra_cir_img"
            android:layout_centerVertical="true"/>

        <!-- Bottom Navigation View -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/transparency"
            app:itemIconTint="@drawable/nav_item_selector"
            app:menu="@menu/bottom_nav_menu"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
