<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--스크롤 가능-->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--가운데 내용 부분-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/topBar">

            <!--목표 영역-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/goal_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <!-- 상단 제목 -->
                <TextView
                    android:id="@+id/set_goal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="독서 목표 설정"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"/>

                <!-- 연간 / 월간 버튼 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:gravity="center"
                    android:elevation="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_background_20"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                <TextView
                    android:id="@+id/set_goal_monthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월간"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:background="@drawable/setgoal_my_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@null"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_marginHorizontal="4dp"
                    android:background="#4D000000"/>

                <TextView
                    android:id="@+id/set_goal_yearly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연간"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:background="@drawable/setgoal_my_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@null"/>
                </LinearLayout>

                <!-- 회색 구분선 -->
                <View
                    android:id="@+id/gray_line_1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#DDDDDD"
                    app:layout_constraintTop_toBottomOf="@id/set_goal_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 목표 권 수 -->
                <LinearLayout
                    android:id="@+id/goal_set_book_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/gray_line_1"
                    app:layout_constraintStart_toStartOf="@id/gray_line_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목표 권 수"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/edit_page"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textColorHint="#DDDDDD"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_total_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="권"
                        android:textSize="16sp"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <!-- 회색 구분선 -->
                <View
                    android:id="@+id/gray_line_2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#DDDDDD"
                    app:layout_constraintTop_toBottomOf="@id/goal_set_book_number"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- 목표 리뷰 수 -->
                <LinearLayout
                    android:id="@+id/goal_set_review"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/gray_line_2"
                    app:layout_constraintStart_toStartOf="@id/gray_line_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목표 감상문 수"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/edit_review"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textColorHint="#DDDDDD"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="권"
                        android:textSize="16sp"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <!-- 회색 구분선 -->
                <View
                    android:id="@+id/gray_line_3"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#DDDDDD"
                    app:layout_constraintTop_toBottomOf="@id/goal_set_review"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- 목표 시간 -->
                <LinearLayout
                    android:id="@+id/goal_set_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/gray_line_3"
                    app:layout_constraintStart_toStartOf="@id/gray_line_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목표 독서 시간"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/edit_time"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textColorHint="#DDDDDD"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시간"
                        android:textSize="16sp"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <!-- 회색 구분선 -->
                <View
                    android:id="@+id/gray_line_4"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#DDDDDD"
                    app:layout_constraintTop_toBottomOf="@id/goal_set_time"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- 책 추가 영역-->
                <LinearLayout
                    android:id="@+id/goal_set_books"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/gray_line_4"
                    app:layout_constraintStart_toStartOf="@id/gray_line_4"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- 책 추가 제목 -->
                    <TextView
                        android:id="@+id/set_books_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="읽고 싶은 책 추가"
                        android:textSize="18sp"
                        android:textColor="#000000" />

                    <!--검색창 추가-->

                    <!-- 책 선택 영역 -->
                    <LinearLayout
                        android:id="@+id/book_image_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/set_books_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:clipChildren="false">

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            android:clipChildren="false"
                            >
                            <LinearLayout
                                android:id="@+id/book_list_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:clipChildren="false"
                                />
                        </HorizontalScrollView>
                    </LinearLayout>
                </LinearLayout>

                <!--하단 여백-->
                <View
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/goal_set_books"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>