<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_frame"
    android:layout_width="100dp"
    android:layout_height="151dp"
    android:layout_marginEnd="10dp"
    android:background="@android:color/transparent"
    android:clipChildren="false"
    >

    <!-- 책 이미지-->
    <ImageView
        android:id="@+id/book_image"
        android:layout_width="95dp"
        android:layout_height="143dp"
        android:scaleType="centerCrop"
        android:contentDescription="Book"
        android:background="@drawable/round_background_8"
        android:clipToOutline="true"
        android:layout_gravity="center"
        />

    <!-- 선택 시 파란 테두리 -->
    <View
        android:id="@+id/selection_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_book_selectable"
        android:visibility="gone" />

    <!-- 완독 시 오버레이 --><!-- 반투명 흰색 -->
    <View
        android:id="@+id/overlay_read"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3FFFFFF"
        android:visibility="gone"/>

    <!-- 완독 시 어워드 아이콘 -->
    <ImageView
        android:id="@+id/award_icon"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:translationY="-25dp"
        android:src="@drawable/ic_award"
        android:visibility="gone"
        />
</FrameLayout>